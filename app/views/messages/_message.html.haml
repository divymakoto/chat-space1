.MainChat__messages__message
  .MainChat__messages__message__upper-info
    .MainChat__messages__message__upper-info__talker
      = message.user.name
    .MainChat__messages__message__upper-info__date
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .MainChat__messages__message
    - if message.content.present?
      %p.MainChat__messages__message__text
        = message.content
    = image_tag message.image.url, class: 'Message__image' if message.image.present?
